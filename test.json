{
    "openapi": "3.0.0",
    "info": {
        "title": "OpenWeatherMap API",
        "description": "APIs for accessing OpenWeatherMap weather data",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https://api.openweathermap.org/data/2.5"
        }
    ],
    "paths": {
        "/weather": {
            "get": {
                "summary": "Current weather data for location",
                "operationId": "getCurrentWeather",
                "parameters": [
                    {
                        "name": "zip",
                        "in": "query",
                        "description": "Zip code and country code",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "appid",
                        "in": "query",
                        "description": "API key",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/forecast": {
            "get": {
                "summary": "5 day weather forecast",
                "operationId": "getForecast",
                "parameters": [
                    {
                        "name": "id",
                        "in": "query",
                        "description": "City ID",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "appid",
                        "in": "query",
                        "description": "API key",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        }
    }
}